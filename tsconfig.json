{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noEmit": false,
    "module": "commonjs",
    "target": "ES2015",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}